@model Vidalink.Tasklist.Repository.Models.Task

@{
    ViewBag.Title = "Remover tarefa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Remover tarefa</h2>

<h3>Você realmente deseja remover essa tarefa?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Título
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            Data de execução
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataExecucao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
